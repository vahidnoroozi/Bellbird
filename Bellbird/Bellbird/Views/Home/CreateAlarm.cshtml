@model Bellbird.Models.CreateAlarmViewModel
@{
    ViewData["Title"] = "Create Alarm";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sign Up</title>
</head>
<body>
    @using (Html.BeginForm("CreateAlarm", "Home", FormMethod.Post))
    {
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th colspan="2" align="center">Alarm Name</th>
            </tr>
            <tr>
                <td>Alarm Name: </td>
                <td>
                    @Html.TextBoxFor(m => m.Name)
                </td>
            </tr>            
            <tr>
                <td></td>
                <td><input type="submit" value="Submit" /></td>
            </tr>
        </table>
    }
</body>
</html>





